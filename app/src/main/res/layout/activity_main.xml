<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.morten.ramdownloader.MainActivity">

    <TextView
        android:id="@+id/ramHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/choose_the_amount_of_ram"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textColor"
        />

    <LinearLayout
        android:id="@+id/row1GB"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ramHeader">


        <TextView
            android:id="@+id/downloadText1GB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/_1gb"
            android:textColor="@color/textColor"
            android:layout_marginRight="30dp"

            />

        <Button
            android:id="@+id/downloadButton1GB"
            android:layout_width="match_parent"
            android:text="@string/download"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/downloadText1GB"
            tools:ignore="ObsoleteLayoutParam" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/row2GB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/row1GB">

        <TextView
            android:id="@+id/downloadText2GB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/_2gb"
            android:textColor="@color/textColor"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/downloadButton2GB"
            android:layout_width="match_parent"
            android:text="@string/download"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/downloadText2GB"
            tools:ignore="ObsoleteLayoutParam" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4GB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/row2GB">

        <TextView
            android:id="@+id/downloadText4GB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/_4gb"
            android:textColor="@color/textColor"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/downloadButton4GB"
            android:layout_width="match_parent"
            android:text="@string/download"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/downloadText4GB"
            tools:ignore="ObsoleteLayoutParam" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/row4GB"
        android:id="@+id/row8GB">

        <TextView
            android:id="@+id/downloadText8GB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/_8gb"
            android:textColor="@color/textColor"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/downloadButton8GB"
            android:layout_width="match_parent"
            android:text="@string/download"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/downloadText4GB"
            tools:ignore="ObsoleteLayoutParam" />

    </LinearLayout>

    <TextView
        android:id="@+id/storage"
        android:layout_width="match_parent"
        android:text="@string/amount"
        android:layout_below="@+id/row8GB"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true" />

    <LinearLayout

        android:id="@+id/row16GB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/storage">

        <TextView
            android:id="@+id/downloadText16GB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Text16GB"
            android:textColor="@color/textColor"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/downloadButton16GB"
            android:layout_width="match_parent"
            android:text="@string/download"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/downloadText16GB"
            tools:ignore="ObsoleteLayoutParam"/>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/row32GB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/row16GB">

        <TextView
            android:id="@+id/downloadText32GB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/text32GB"
            android:textColor="@color/textColor"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/downloadButton32GB"
            android:layout_width="match_parent"
            android:text="@string/download"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/downloadText32GB"
            tools:ignore="ObsoleteLayoutParam"/>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/row64GB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/row32GB">

        <TextView
            android:id="@+id/downloadText64GB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/text64GB"
            android:textColor="@color/textColor"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/downloadButton64GB"
            android:layout_width="match_parent"
            android:text="@string/download"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/downloadText64GB"
            tools:ignore="ObsoleteLayoutParam"/>

    </LinearLayout>

</RelativeLayout>
